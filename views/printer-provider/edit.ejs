<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Printer</title>
    <link rel="icon" href="https://lms.hcmut.edu.vn/pluginfile.php/3/theme_academi/logo/1725955904/logoBK.png" type="image/x-icon" />
    <%- include('../partials/style'); %>
</head>

<body>
    <%- include('../partials/navbar-printer'); %>
    <h1 class="mt-3 mb-3 text-center">Edit Printer</h1>

    <div class="container">
        <form id="editPrinterForm">
            <!-- Printer Name Field -->
            <div class="form-group mb-3">
                <label for="printerName">Printer Name</label>
                <input type="text" class="form-control" id="printerName" value="Printer 1" placeholder="Enter Printer Name">
            </div>

            <!-- Location Field -->
            <div class="form-group mb-3">
                <label for="printerLocation">Location</label>
                <input type="text" class="form-control" id="printerLocation" value="A5-101" placeholder="Enter Location">
            </div>

            <!-- Status Field -->
            <div class="form-group mb-3">
                <label for="printerStatus">Status</label>
                <select class="form-control" id="printerStatus">
                    <option value="Good" selected>Good</option>
                    <option value="Normal">Normal</option>
                    <option value="Error">Error</option>
                </select>
            </div>

            <!-- Model Name Field -->
            <div class="form-group mb-3">
                <label for="printerModel">Model Name</label>
                <input type="text" class="form-control" id="printerModel" value="Model X" placeholder="Enter Printer Model Name">
            </div>

            <!-- Driver File Upload Field -->
            <div class="form-group mb-3">
                <label for="printerDriver">Printer Driver File</label>
                <input type="file" class="form-control-file" id="printerDriver">
                <small class="form-text text-muted">Upload the printer driver file (e.g., .exe, .dmg). Leave empty if no change.</small>
            </div>

            <!-- Submit and Cancel Buttons -->
            <button type="submit" class="btn btn-primary">Update Printer</button>
            <a href="/printer/manage" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <%- include('../partials/footer'); %>

    <script>
        // Simulate updating a printer and redirecting to the management page
        document.getElementById('editPrinterForm').addEventListener('submit', function (e) {
            e.preventDefault();
            // Normally, you'd send a PUT request to a backend. Here, we just redirect.
            alert('Printer updated successfully!');
            window.location.href = "/printer/manage"; // Redirect back to the printer management page
        });
    </script>
</body>

</html>
